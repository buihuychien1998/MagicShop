<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.AccountFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorMain">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ivProfile"
                style="@style/BorderLessBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/dp8"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_user_profile"
                app:civ_border_color="@android:color/white"
                app:civ_border_width="@dimen/_1sdp"
                app:civ_circle_background_color="@android:color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/_8sdp"
                android:layout_toStartOf="@id/btnSetting"
                android:layout_toEndOf="@+id/ivProfile"
                android:gravity="center_vertical"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="@dimen/sp16" />

            <ImageButton
                android:id="@+id/btnSetting"
                style="@style/CustomImageButton"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_settings" />
        </RelativeLayout>

        <FrameLayout
            android:id="@+id/fl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolBar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMain"
                android:baselineAligned="false"
                android:orientation="horizontal"
                android:visibility="visible"
                android:weightSum="2">

                <LinearLayout
                    style="@style/BorderBackground"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Yêu thích\ncủa tôi"
                        android:textAllCaps="false"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <LinearLayout
                    style="@style/BorderBackground"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:descendantFocusability="blocksDescendants"
                    android:focusable="true"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textAppearance="@style/TextAppearance.AppCompat.Large"
                        android:textColor="@android:color/white" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Gian hàng đã\ntheo dõi"
                        android:textColor="@android:color/white"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorMain"
                android:gravity="center"
                android:paddingTop="@dimen/dp16"
                android:paddingBottom="@dimen/dp16"
                android:visibility="visible">

                <Button
                    android:id="@+id/btnAuthentication"
                    style="@style/BorderBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn_border_white"
                    android:paddingStart="@dimen/dp16"
                    android:paddingEnd="@dimen/dp16"
                    android:text="@string/ng_nh_p_ng_ky"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/fl"
            android:padding="8dp">

            <TextView
                android:id="@+id/tvOptionPayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Đơn hàng của tôi"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sp16" />

            <TextView
                style="@style/BorderBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="8dp"
                android:clickable="true"
                android:descendantFocusability="blocksDescendants"
                android:focusable="true"
                android:text="Xem tất cả đơn hàng >"
                android:textColor="#f20"
                android:textSize="@dimen/sp12" />

            <LinearLayout
                android:id="@+id/lnl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvOptionPayment"
                android:orientation="horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:visibility="visible"
                android:weightSum="4">


                <TextView
                    style="@style/BorderBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_credit_card"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="Chờ\nthanh toán"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp14" />


                <TextView
                    style="@style/BorderBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_delivery_cart"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="Chờ\nvận chuyển"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp14" />


                <TextView
                    style="@style/BorderBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_delivery_truck"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="Chờ\ngiao hàng"
                    android:textAllCaps="false"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp14" />


                <TextView
                    style="@style/BorderBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableTop="@drawable/ic_evaluate"
                    android:focusable="true"
                    android:gravity="center"
                    android:text="Chưa\nđánh giá"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp14" />
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/lnl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnl"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tvOrderReturn"
                    style="@style/BorderBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_re_delivery"
                    android:drawablePadding="4dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Đơn hàng đổi trả"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp14"
                    app:layout_constraintEnd_toStartOf="@id/tvOrderCancel"
                    app:layout_constraintStart_toStartOf="parent" />


                <TextView
                    android:id="@+id/tvOrderCancel"
                    style="@style/BorderBackground"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1"
                    android:clickable="true"
                    android:drawableStart="@drawable/ic_cancel_file"
                    android:drawablePadding="4dp"
                    android:focusable="true"
                    android:gravity="center"
                    android:padding="8dp"
                    android:text="Đơn hàng đã hủy"
                    android:textAllCaps="false"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp14"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/tvOrderReturn" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:id="@+id/lnl3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnl2"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kiểm tra kiện hàng"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp16" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_8sdp"
                    app:cardCornerRadius="@dimen/_6sdp">

                    <com.smarteist.autoimageslider.SliderView
                        android:id="@+id/sliderView"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        app:sliderAnimationDuration="600"
                        app:sliderAutoCycleDirection="back_and_forth"
                        app:sliderAutoCycleEnabled="true"
                        app:sliderCircularHandlerEnabled="true"
                        app:sliderIndicatorAnimationDuration="600"
                        app:sliderIndicatorGravity="center_horizontal|bottom"
                        app:sliderIndicatorMargin="15dp"
                        app:sliderIndicatorOrientation="horizontal"
                        app:sliderIndicatorPadding="3dp"
                        app:sliderIndicatorRadius="2dp"
                        app:sliderIndicatorSelectedColor="#5A5A5A"
                        app:sliderIndicatorUnselectedColor="#FFF"
                        app:sliderScrollTimeInSec="1"
                        app:sliderStartAutoCycle="true" />

                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/lnl3"
                android:layout_marginTop="4dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dịch vụ của tôi"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/sp16" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingTop="8dp"
                    android:paddingBottom="2dp"
                    android:weightSum="2">


                    <TextView
                        style="@style/BorderBackground"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_navigate_next"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4dp"
                        android:text="Tin nhắn"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp14" />

                    <TextView
                        style="@style/BorderBackground"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_navigate_next"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4dp"
                        android:text="Đánh giá của tôi"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:weightSum="2">


                    <TextView
                        style="@style/BorderBackground"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_navigate_next"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4dp"
                        android:text="Tùy chọn thanh toán"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp14" />


                    <TextView
                        style="@style/BorderBackground"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_navigate_next"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4dp"
                        android:text="Chat với CLEO"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:weightSum="2">


                    <TextView
                        style="@style/BorderBackground"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_navigate_next"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4dp"
                        android:text="Trợ giúp"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp14" />


                    <TextView
                        style="@style/BorderBackground"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_navigate_next"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4dp"
                        android:text="Miễn phí vận chuyển"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp14" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingTop="2dp"
                    android:weightSum="2">


                    <TextView
                        style="@style/BorderBackground"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:drawableEnd="@drawable/ic_navigate_next"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingStart="4dp"
                        android:paddingTop="4dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="4dp"
                        android:text="Bán hàng trên Magic Shop"
                        android:textColor="@android:color/black"
                        android:textSize="@dimen/sp14" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>


</ScrollView>