<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/message"
    app:startDestination="@id/supportFragment">

    <fragment
        android:id="@+id/supportFragment"
        android:name="com.hidero.test.ui.fragments.SupportFragment"
        android:label="fragment_support"
        tools:layout="@layout/fragment_support" >
        <action
            android:id="@+id/action_supportFragment_to_statisticFragment"
            app:destination="@id/statisticFragment" />
        <action
            android:id="@+id/action_supportFragment_to_updateBillFragment"
            app:destination="@id/updateBillFragment" />
    </fragment>
    <fragment
        android:id="@+id/statisticFragment"
        android:name="com.hidero.test.ui.fragments.StatisticFragment"
        android:label="StatisticFragment"
        tools:layout="@layout/fragment_statistic"/>
    <fragment
        android:id="@+id/updateBillFragment"
        android:name="com.hidero.test.ui.fragments.UpdateBillFragment"
        android:label="fragment_update_bill"
        tools:layout="@layout/fragment_update_bill" />

</navigation>